---
import BaseLayout from './BaseLayout.astro';
import YouTubeEmbed from '../components/YouTubeEmbed.astro';
import ChapterNav from '../components/ChapterNav.astro';
import { getCollection } from 'astro:content';
import { buildPodcastEpisodeJsonLd, resolveEpisodeThumbnail } from '../lib/seo';

interface Chapter {
  time: string;
  title: string;
}

interface Props {
  episodeNumber: number;
  title: string;
  description: string;
  publishedAt: Date;
  duration: string;
  youtubeId: string;
  thumbnail?: string | null;
  hosts: string[];
  chapters: Chapter[];
  lang: 'ko' | 'en';
  alternateSlug?: string | null;
}

const {
  episodeNumber,
  title,
  description,
  publishedAt,
  duration,
  youtubeId,
  thumbnail,
  hosts,
  chapters,
  lang,
  alternateSlug,
} = Astro.props;

const formattedDate = publishedAt.toLocaleDateString(lang === 'ko' ? 'ko-KR' : 'en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
const site = Astro.site?.toString() ?? 'https://aifrontier.kr';
const canonicalPath = `/${lang}/episodes/ep${episodeNumber}`;
const alternatePath = alternateSlug
  ? `/${lang === 'ko' ? 'en' : 'ko'}/episodes/${alternateSlug}`
  : null;
const ogImage = resolveEpisodeThumbnail({ thumbnail: thumbnail ?? null, youtubeId });
const jsonLd = buildPodcastEpisodeJsonLd({
  site,
  lang,
  episodeNumber,
  title,
  description,
  publishedAt: publishedAt.toISOString().slice(0, 10),
  duration,
  youtubeId,
  thumbnail: ogImage,
});

// Get all episodes for prev/next navigation
const allEpisodes = await getCollection('episodes');
const langEpisodes = allEpisodes
  .filter(ep => ep.data.lang === lang)
  .sort((a, b) => a.data.episodeNumber - b.data.episodeNumber);

const currentIndex = langEpisodes.findIndex(ep => ep.data.episodeNumber === episodeNumber);
const prevEpisode = currentIndex > 0 ? langEpisodes[currentIndex - 1] : null;
const nextEpisode = currentIndex < langEpisodes.length - 1 ? langEpisodes[currentIndex + 1] : null;

const homeUrl = `/${lang}`;
const homeLabel = lang === 'ko' ? '홈' : 'Home';
---

<BaseLayout
  title={`EP ${episodeNumber}: ${title}`}
  description={description}
  lang={lang}
  alternateSlug={alternateSlug}
  canonicalPath={canonicalPath}
  alternatePath={alternatePath}
  ogImage={ogImage}
  jsonLd={jsonLd}
>
  <div class="max-w-7xl mx-auto px-4 lg:pl-0 lg:pr-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm" aria-label="Breadcrumb">
      <ol class="flex items-center gap-2 text-gray-500 dark:text-gray-400">
        <li>
          <a href={homeUrl} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
            {homeLabel}
          </a>
        </li>
        <li class="text-gray-300 dark:text-gray-600">/</li>
        <li class="text-gray-900 dark:text-gray-100 font-medium">
          EP {episodeNumber}
        </li>
      </ol>
    </nav>

    <!-- Main content with sidebar -->
    <div class="lg:flex lg:gap-6">
      <!-- Left sidebar (desktop only) -->
      <aside class="hidden lg:block lg:w-80 flex-shrink-0">
        <div class="sticky top-20 flex flex-col gap-4 max-h-[calc(100vh-6rem)]">
          <!-- Mini player slot (at top of sidebar) -->
          <div id="sidebar-player-slot" class="hidden flex-shrink-0 aspect-video w-full"></div>
          <!-- Chapters -->
          <div class="flex-1 overflow-y-auto">
            <ChapterNav chapters={chapters} episodeNumber={episodeNumber} episodeTitle={title} />
          </div>
        </div>
      </aside>

      <!-- Main column -->
      <article class="lg:flex-1 max-w-4xl">
        <!-- Episode Header -->
        <header class="mb-8">
          <p class="text-sm font-medium text-primary-600 dark:text-primary-400 mb-2">
            EP {episodeNumber}
          </p>
          <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">
            {title}
          </h1>
          <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-sm text-gray-600 dark:text-gray-400">
            <time datetime={publishedAt.toISOString()}>{formattedDate}</time>
            <span>·</span>
            <span>{hosts.join(', ')}</span>
            <span>·</span>
            <span>{duration}</span>
            <div class="header-actions-group ml-auto">
              <span class="header-actions-label">{lang === 'ko' ? '페이지 전체' : 'Page'}</span>
              <div class="header-actions">
                <button
                  id="copy-page-link-btn"
                  type="button"
                  class="copy-btn page-link-btn"
                  title={lang === 'ko' ? '페이지 링크 복사' : 'Copy page link'}
                  aria-label={lang === 'ko' ? '페이지 링크 복사' : 'Copy page link'}
                >
                  <svg class="link-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
                  <svg class="check-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                </button>
                <button
                  id="copy-all-btn"
                  type="button"
                  class="copy-btn copy-all-btn"
                  title={lang === 'ko' ? '페이지 전체 복사' : 'Copy entire page'}
                  aria-label={lang === 'ko' ? '페이지 전체 복사' : 'Copy entire page'}
                >
                  <svg class="copy-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                  <svg class="check-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                </button>
              <button
                id="download-all-btn"
                type="button"
                class="copy-btn download-all-btn"
                title={lang === 'ko' ? '페이지 전체 다운로드' : 'Download entire page'}
                aria-label={lang === 'ko' ? '페이지 전체 다운로드' : 'Download entire page'}
                data-download-filename={`ep${episodeNumber}-${lang}-transcript.txt`}
              >
                <svg class="download-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
              </button>
              </div>
            </div>
          </div>
        </header>

        <!-- YouTube Player -->
        <section class="mb-8">
          <YouTubeEmbed videoId={youtubeId} title={title} />
        </section>

        <!-- Chapters (mobile only) -->
        <div class="lg:hidden">
          <ChapterNav chapters={chapters} />
        </div>

        <!-- Transcript -->
        <section class="prose prose-transcript max-w-none">
          <slot />
        </section>

        <!-- Episode Navigation -->
        <nav class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
          <div class="flex justify-between items-stretch gap-4">
            {prevEpisode ? (
              <a
                href={`/${lang}/episodes/ep${prevEpisode.data.episodeNumber}`}
                class="flex-1 group p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-300 dark:hover:border-primary-600 hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors"
              >
                <div class="text-sm text-gray-500 dark:text-gray-400 mb-1">← {lang === 'ko' ? '이전' : 'Previous'}</div>
                <div class="font-medium text-gray-900 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400">
                  EP {prevEpisode.data.episodeNumber}
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400 line-clamp-1">
                  {prevEpisode.data.title}
                </div>
              </a>
            ) : (
              <div class="flex-1"></div>
            )}

            {nextEpisode ? (
              <a
                href={`/${lang}/episodes/ep${nextEpisode.data.episodeNumber}`}
                class="flex-1 group p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-300 dark:hover:border-primary-600 hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors text-right"
              >
                <div class="text-sm text-gray-500 dark:text-gray-400 mb-1">{lang === 'ko' ? '다음' : 'Next'} →</div>
                <div class="font-medium text-gray-900 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400">
                  EP {nextEpisode.data.episodeNumber}
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400 line-clamp-1">
                  {nextEpisode.data.title}
                </div>
              </a>
            ) : (
              <div class="flex-1"></div>
            )}
          </div>
        </nav>
      </article>
    </div>
  </div>
</BaseLayout>

<style is:global>
  /* Transcript base font size */
  .prose-transcript {
    font-size: 1.125rem; /* 18px - one step larger */
  }

  /* Transcript styling */
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #e5e7eb;
    cursor: pointer;
  }

  @media (prefers-color-scheme: dark) {
    .prose h2 {
      border-color: #1f2937;
    }
  }

  .prose h2:hover {
    color: var(--color-primary-600);
  }

  @media (prefers-color-scheme: dark) {
    .prose h2:hover {
      color: var(--color-primary-400);
    }
  }

  /* Timestamp in h2 */
  .prose h2 em {
    font-size: 1rem;
    font-weight: 400;
    color: #6b7280;
    margin-left: 0.5rem;
    font-style: normal;
  }

  @media (prefers-color-scheme: dark) {
    .prose h2 em {
      color: #9ca3af;
    }
  }

  /* Speaker names */
  .prose strong {
    font-weight: 600;
    color: var(--color-primary-700);
  }

  @media (prefers-color-scheme: dark) {
    .prose strong {
      color: var(--color-primary-400);
    }
  }

  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
    color: #1f2937;
  }

  @media (prefers-color-scheme: dark) {
    .prose p {
      color: #e5e7eb;
    }
  }

  /* Transcript with hanging timestamps */
  .prose-transcript {
    padding-left: 0;
    word-break: keep-all;
    overflow-wrap: break-word;
  }

  /* Desktop: enable hanging indent */
  @media (min-width: 768px) {
    .prose-transcript {
      padding-left: 5rem;
    }
  }

  /* Paragraph timestamps - hanging indent style */
  .prose .paragraph-timestamp {
    font-size: 0.75rem;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    color: #9ca3af;
    cursor: pointer;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    transition: all 0.15s ease;

    /* Mobile: inline timestamp */
    display: none;
    margin-right: 0.25rem;
  }

  /* Desktop: hanging indent */
  @media (min-width: 768px) {
    .prose .paragraph-timestamp {
      display: inline-block;
      font-size: 0.875rem;
      padding: 0.125rem 0.75rem 0.125rem 0;
      width: 5rem;
      margin-left: -5rem;
      margin-right: -0.3rem;
      text-align: right;
    }
  }

  .prose .paragraph-timestamp:hover {
    color: var(--color-primary-600);
    background-color: var(--color-primary-50);
  }

  @media (prefers-color-scheme: dark) {
    .prose .paragraph-timestamp {
      color: #6b7280;
    }

    .prose .paragraph-timestamp:hover {
      color: var(--color-primary-400);
      background-color: rgba(14, 165, 233, 0.1);
    }
  }

  /* Keep h2 chapter headings full width (desktop only) */
  @media (min-width: 768px) {
    .prose-transcript h2 {
      margin-left: -5rem;
    }
  }

  /* --- Transcript copy buttons --- */
  .copy-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem;
    border: none;
    border-radius: 0.25rem;
    color: #9ca3af;
    background: transparent;
    cursor: pointer;
    transition: color 0.15s ease;
    line-height: 1;
  }

  .copy-btn:hover {
    color: var(--color-primary-600);
  }

  .copy-btn.copied {
    color: #10b981;
  }

  .copy-btn .check-icon,
  .copy-btn .copied-label {
    display: none;
  }

  .copy-btn.copied .copy-icon,
  .copy-btn.copied .download-icon,
  .copy-btn.copied .link-icon,
  .copy-btn.copied .copy-label {
    display: none;
  }

  .copy-btn.copied .check-icon,
  .copy-btn.copied .copied-label {
    display: inline;
  }

  .header-actions-group {
    display: inline-flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.125rem;
  }

  .header-actions-label {
    font-size: 0.75rem;
    color: #9ca3af;
    line-height: 1;
  }

  .header-actions {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .copy-all-btn,
  .page-link-btn,
  .download-all-btn {
    padding: 0.25rem;
  }

  @media (prefers-color-scheme: dark) {
    .copy-btn {
      color: #6b7280;
    }

    .copy-btn:hover {
      color: var(--color-primary-400);
    }

    .copy-btn.copied {
      color: #34d399;
    }
  }

  /* Chapter copy button (injected into h2) */
  .prose-transcript h2 {
    position: relative;
  }

  .chapter-actions {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    display: inline-flex;
    gap: 0.25rem;
    opacity: 0;
    transition: opacity 0.15s ease;
  }

  .prose-transcript h2:hover .chapter-actions {
    opacity: 1;
  }

  /* Show chapter action buttons on touch devices (no hover) */
  @media (hover: none) {
    .chapter-actions {
      opacity: 1;
    }
  }
</style>

<script>
  // Make chapter headings clickable
  document.querySelectorAll('.prose h2').forEach((h2) => {
    const em = h2.querySelector('em');
    if (em) {
      const timestamp = em.textContent?.trim();
      if (timestamp) {
        h2.setAttribute('data-timestamp', timestamp);
        h2.setAttribute('role', 'button');
        h2.setAttribute('tabindex', '0');
      }
    }
  });

  // Handle paragraph timestamp clicks
  document.querySelectorAll('.prose .paragraph-timestamp').forEach((span) => {
    span.addEventListener('click', (e) => {
      e.stopPropagation();
      const ts = (span as HTMLElement).dataset.ts;
      if (ts && typeof window.seekToTime === 'function') {
        const parts = ts.split(':').map(Number);
        let seconds = 0;
        if (parts.length === 3) {
          seconds = parts[0] * 3600 + parts[1] * 60 + parts[2];
        } else if (parts.length === 2) {
          seconds = parts[0] * 60 + parts[1];
        }
        window.seekToTime(seconds);
      }
    });
  });

  // --- Transcript copy functionality ---

  const COPY_ICON_SVG = '<svg class="copy-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>';
  const LINK_ICON_SVG = '<svg class="link-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>';
  const CHECK_ICON_SVG = '<svg class="check-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>';

  // Extract clean text from a range of sibling elements
  function extractText(elements: Element[]): string {
    const lines: string[] = [];
    for (const node of elements) {
      if (node.tagName === 'H2') {
        // Get chapter title text, excluding <em> (timestamp) and copy button
        let title = '';
        for (const child of node.childNodes) {
          if (child.nodeType === Node.TEXT_NODE) {
            title += child.textContent;
          }
        }
        lines.push(`\n## ${title.trim()}\n`);
      } else if (node.tagName === 'P') {
        let text = '';
        for (const child of node.childNodes) {
          const el = child as HTMLElement;
          if (el.classList?.contains('paragraph-timestamp')) continue;
          if (el.classList?.contains('copy-chapter-btn')) continue;
          if (el.tagName === 'STRONG') {
            text += el.textContent + ':';
          } else {
            text += child.textContent;
          }
        }
        const trimmed = text.trim();
        if (trimmed) lines.push(trimmed);
      }
    }
    return lines.filter(Boolean).join('\n\n').trim();
  }

  // Get all transcript content elements (children of .prose-transcript, excluding the copy bar)
  function getAllTranscriptElements(): Element[] {
    const container = document.querySelector('.prose-transcript');
    if (!container) return [];
    return Array.from(container.children).filter(
      el => !el.classList.contains('transcript-copy-bar')
    );
  }

  // Get elements belonging to a specific chapter (from its H2 to the next H2)
  function getChapterElements(h2: Element): Element[] {
    const elements: Element[] = [h2];
    let sibling = h2.nextElementSibling;
    while (sibling && sibling.tagName !== 'H2') {
      elements.push(sibling);
      sibling = sibling.nextElementSibling;
    }
    return elements;
  }

  function getChapterPermalink(h2: Element): string {
    const heading = h2 as HTMLElement;
    const hash = heading.id ? `#${heading.id}` : '';
    return `${window.location.origin}${window.location.pathname}${window.location.search}${hash}`;
  }

  // Copy text and show feedback
  async function copyWithFeedback(text: string, btn: HTMLButtonElement) {
    try {
      await navigator.clipboard.writeText(text);
      btn.classList.add('copied');
      setTimeout(() => btn.classList.remove('copied'), 2000);
    } catch {
      // Fallback for older browsers
      const textarea = document.createElement('textarea');
      textarea.value = text;
      textarea.style.position = 'fixed';
      textarea.style.opacity = '0';
      document.body.appendChild(textarea);
      textarea.select();
      document.execCommand('copy');
      document.body.removeChild(textarea);
      btn.classList.add('copied');
      setTimeout(() => btn.classList.remove('copied'), 2000);
    }
  }

  // "Copy page link" button handler
  const copyPageLinkBtn = document.getElementById('copy-page-link-btn') as HTMLButtonElement;
  if (copyPageLinkBtn) {
    copyPageLinkBtn.addEventListener('click', () => {
      const pageLink = `${window.location.origin}${window.location.pathname}${window.location.search}`;
      copyWithFeedback(pageLink, copyPageLinkBtn);
    });
  }

  // "Copy all" button handler
  const copyAllBtn = document.getElementById('copy-all-btn') as HTMLButtonElement;
  if (copyAllBtn) {
    copyAllBtn.addEventListener('click', () => {
      const text = extractText(getAllTranscriptElements());
      copyWithFeedback(text, copyAllBtn);
    });
  }

  // "Download all" button handler
  const downloadAllBtn = document.getElementById('download-all-btn') as HTMLButtonElement;
  if (downloadAllBtn) {
    downloadAllBtn.addEventListener('click', () => {
      const text = extractText(getAllTranscriptElements());
      const filename = downloadAllBtn.dataset.downloadFilename || 'transcript.txt';
      const blob = new Blob([text], { type: 'text/plain;charset=utf-8' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = filename;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    });
  }

  // Inject chapter action buttons (permalink + copy) into each H2
  document.querySelectorAll('.prose-transcript h2').forEach((h2) => {
    const actionGroup = document.createElement('span');
    actionGroup.className = 'chapter-actions';

    const permalinkBtn = document.createElement('button');
    permalinkBtn.type = 'button';
    permalinkBtn.className = 'copy-btn permalink-chapter-btn';
    permalinkBtn.innerHTML = LINK_ICON_SVG + CHECK_ICON_SVG;
    permalinkBtn.title = document.documentElement.lang === 'ko' ? '이 챕터 링크 복사' : 'Copy chapter permalink';
    permalinkBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      const link = getChapterPermalink(h2);
      copyWithFeedback(link, permalinkBtn);
    });

    const copyBtn = document.createElement('button');
    copyBtn.type = 'button';
    copyBtn.className = 'copy-btn copy-chapter-btn';
    copyBtn.innerHTML = COPY_ICON_SVG + CHECK_ICON_SVG;
    copyBtn.title = document.documentElement.lang === 'ko' ? '이 챕터 복사' : 'Copy chapter';
    copyBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      const text = extractText(getChapterElements(h2));
      copyWithFeedback(text, copyBtn);
    });

    actionGroup.appendChild(permalinkBtn);
    actionGroup.appendChild(copyBtn);
    h2.appendChild(actionGroup);
  });
</script>
