---
interface Props {
  url: string;
  title: string;
  domain: string;
}
const { url, title, domain } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="resource-link"
>
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
  <span class="resource-link-title">{title}</span>
  <span class="resource-link-domain">{domain}</span>
  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="resource-link-arrow"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
</a>

<style>
  .resource-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0.5rem 0;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    border: 1px solid #e5e7eb;
    background: #f9fafb;
    color: #374151;
    font-size: 0.8125rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.15s ease;
    max-width: 100%;
  }
  .resource-link:hover {
    border-color: var(--color-primary-300, #93c5fd);
    background: var(--color-primary-50, #eff6ff);
    color: var(--color-primary-700, #1d4ed8);
  }
  .resource-link-title {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .resource-link-domain {
    color: #9ca3af;
    font-size: 0.75rem;
    flex-shrink: 0;
  }
  .resource-link-arrow {
    opacity: 0.4;
    flex-shrink: 0;
  }
  @media (prefers-color-scheme: dark) {
    .resource-link {
      border-color: #374151;
      background: #1f2937;
      color: #d1d5db;
    }
    .resource-link:hover {
      border-color: var(--color-primary-600, #60a5fa);
      background: rgba(14, 165, 233, 0.1);
      color: var(--color-primary-400, #93c5fd);
    }
    .resource-link-domain {
      color: #6b7280;
    }
  }
</style>
