---
interface Props {
  url: string;
  title: string;
  domain: string;
  description?: string;
}
const { url, title, domain, description } = Astro.props;
const faviconUrl = `https://www.google.com/s2/favicons?domain=${domain}&sz=32`;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="resource-link"
>
  <img
    src={faviconUrl}
    alt=""
    width="20"
    height="20"
    class="resource-link-favicon"
    loading="lazy"
  />
  <span class="resource-link-body">
    <span class="resource-link-header">
      <span class="resource-link-title">{title}</span>
      <span class="resource-link-domain">{domain}</span>
    </span>
    {description && (
      <span class="resource-link-desc">{description}</span>
    )}
  </span>
  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="resource-link-arrow"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
</a>

<style>
  .resource-link {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    margin: 0.75rem 0;
    padding: 0.625rem 0.875rem;
    border-radius: 0.5rem;
    border: 1px solid #e5e7eb;
    background: #f9fafb;
    color: #374151;
    text-decoration: none;
    transition: all 0.15s ease;
    max-width: 100%;
  }
  .resource-link:hover {
    border-color: var(--color-primary-300, #93c5fd);
    background: var(--color-primary-50, #eff6ff);
    color: var(--color-primary-700, #1d4ed8);
  }
  .resource-link-favicon {
    flex-shrink: 0;
    border-radius: 4px;
  }
  .resource-link-body {
    display: block;
    flex: 1;
    min-width: 0;
  }
  .resource-link-header {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }
  .resource-link-title {
    font-size: 0.8125rem;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .resource-link-domain {
    color: #9ca3af;
    font-size: 0.6875rem;
    flex-shrink: 0;
  }
  .resource-link-desc {
    display: block;
    margin-top: 0.125rem;
    font-size: 0.75rem;
    color: #6b7280;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .resource-link-arrow {
    opacity: 0.3;
    flex-shrink: 0;
  }
  .resource-link:hover .resource-link-arrow {
    opacity: 0.6;
  }
  @media (prefers-color-scheme: dark) {
    .resource-link {
      border-color: #374151;
      background: #1f2937;
      color: #d1d5db;
    }
    .resource-link:hover {
      border-color: var(--color-primary-600, #60a5fa);
      background: rgba(14, 165, 233, 0.1);
      color: var(--color-primary-400, #93c5fd);
    }
    .resource-link-domain {
      color: #6b7280;
    }
    .resource-link-desc {
      color: #9ca3af;
    }
  }
</style>
