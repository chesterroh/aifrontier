---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { buildPodcastSeriesJsonLd } from '../../lib/seo';

const episodes = await getCollection('episodes', ({ data }) => data.lang === 'en');
const sortedEpisodes = episodes.sort((a, b) => b.data.episodeNumber - a.data.episodeNumber);

const [featured, ...rest] = sortedEpisodes;
const site = Astro.site?.toString() ?? 'https://aifrontier.kr';
const description = 'AI Frontier - A deep-dive AI podcast by Chester Roh (노정석), Seungjoon Choi (최승준), and Seonghyun Kim (김성현), exploring the latest in AI technology, industry, and philosophy';
const jsonLd = buildPodcastSeriesJsonLd({
  site,
  lang: 'en',
  name: 'AI Frontier',
  description,
});
---

<BaseLayout
  title="AI Frontier"
  description={description}
  lang="en"
  canonicalPath="/en"
  alternatePath="/ko"
  jsonLd={jsonLd}
>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <p class="text-center text-gray-600 dark:text-gray-400 mb-8">
      A deep-dive AI podcast by Chester Roh, Seungjoon Choi, and Seonghyun Kim, exploring the latest in AI technology, industry, and philosophy.
    </p>
    {featured && (
      <section class="mb-12">
        <a href={`/en/episodes/ep${featured.data.episodeNumber}`} class="block group">
          <article class="border border-gray-200 dark:border-gray-800 rounded-xl overflow-hidden hover:border-primary-500 transition-colors">
            {featured.data.thumbnail && (
              <div class="aspect-video bg-gray-100 dark:bg-gray-900 overflow-hidden">
                <img
                  src={featured.data.thumbnail}
                  alt={featured.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="eager"
                />
              </div>
            )}
            <div class="p-6">
              <p class="text-sm font-medium text-primary-600 dark:text-primary-400 mb-2">
                EP {featured.data.episodeNumber}
              </p>
              <h2 class="text-2xl font-bold mb-2 group-hover:text-primary-600 transition-colors">
                {featured.data.title}
              </h2>
              <p class="text-gray-600 dark:text-gray-400 text-sm">
                {featured.data.publishedAt.toLocaleDateString('en-US')} · {featured.data.duration}
              </p>
            </div>
          </article>
        </a>
      </section>
    )}

    {rest.length > 0 && (
      <section>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {rest.map((episode) => (
            <a href={`/en/episodes/ep${episode.data.episodeNumber}`} class="block group">
              <article class="border border-gray-200 dark:border-gray-800 rounded-lg overflow-hidden hover:border-primary-500 transition-colors h-full">
                {episode.data.thumbnail && (
                  <div class="aspect-video bg-gray-100 dark:bg-gray-900 overflow-hidden">
                    <img
                      src={episode.data.thumbnail}
                      alt={episode.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="p-4">
                  <p class="text-xs font-medium text-primary-600 dark:text-primary-400 mb-1">
                    EP {episode.data.episodeNumber}
                  </p>
                  <h3 class="font-semibold text-sm line-clamp-2 group-hover:text-primary-600 transition-colors">
                    {episode.data.title}
                  </h3>
                  <p class="text-gray-500 dark:text-gray-400 text-xs mt-2">
                    {episode.data.publishedAt.toLocaleDateString('en-US')}
                  </p>
                </div>
              </article>
            </a>
          ))}
        </div>
      </section>
    )}

    {sortedEpisodes.length === 0 && (
      <div class="text-center py-16 text-gray-500 dark:text-gray-400">
        <p>No episodes available yet.</p>
      </div>
    )}
  </div>
</BaseLayout>
